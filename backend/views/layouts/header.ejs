<!-- Meta tags for social media previews -->
<meta property="og:site_name" content="Share Me">
<meta property="og:type" content="website">
<meta property="og:locale" content="en_US">

<!-- Twitter Card meta tags -->
<% if (typeof page !== 'undefined' && page.image) { %>
<meta name="twitter:card" content="summary_large_image">
<% } else { %>
<meta name="twitter:card" content="summary">
<% } %>
<meta name="twitter:site" content="@shareme">
<meta name="twitter:creator" content="@shareme">

<!-- These tags will be overridden by specific pages -->
<meta property="og:title" content="<%= typeof page !== 'undefined' && page.metaTitle ? page.metaTitle : (typeof page !== 'undefined' && page.title ? page.title + ' - Share Me' : 'Share Me') %>">
<meta name="twitter:title" content="<%= typeof page !== 'undefined' && page.metaTitle ? page.metaTitle : (typeof page !== 'undefined' && page.title ? page.title + ' - Share Me' : 'Share Me') %>">

<meta property="og:description" content="<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>">
<meta name="description" content="<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>">
<meta name="twitter:description" content="<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>">

<!-- Image meta tags with absolute URLs - only if image exists -->
<% if (typeof page !== 'undefined' && page.image) { %>
<meta property="og:image" content="<%= page.image %>">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:type" content="image/jpeg">
<meta property="og:image:alt" content="<%= typeof page !== 'undefined' && page.title ? page.title : 'Share Me' %>">

<meta name="twitter:image" content="<%= page.image %>">
<meta name="twitter:image:alt" content="<%= typeof page !== 'undefined' && page.title ? page.title : 'Share Me' %>">

<!-- Telegram-specific meta tags for image -->
<meta name="telegram:image" content="<%= page.image %>">

<!-- GitHub-specific meta tags for image -->
<meta name="github:image" content="<%= page.image %>">
<% } %>

<!-- URL meta tags -->
<meta property="og:url" content="<%= typeof currentUrl !== 'undefined' ? currentUrl : 'https://www.shareme.bio' %>">
<meta property="canonical" content="<%= typeof currentUrl !== 'undefined' ? currentUrl : 'https://www.shareme.bio' %>">

<!-- Telegram-specific meta tags -->
<meta property="telegram:channel" content="@shareme">
<meta name="telegram:title" content="<%= typeof page !== 'undefined' && page.metaTitle ? page.metaTitle : (typeof page !== 'undefined' && page.title ? page.title + ' - Share Me' : 'Share Me') %>">
<meta name="telegram:description" content="<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>">

<!-- GitHub-specific meta tags -->
<meta name="github:title" content="<%= typeof page !== 'undefined' && page.metaTitle ? page.metaTitle : (typeof page !== 'undefined' && page.title ? page.title + ' - Share Me' : 'Share Me') %>">
<meta name="github:description" content="<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>">
<meta name="github:card" content="<%= typeof page !== 'undefined' && page.image ? 'summary_large_image' : 'summary' %>">

<!-- Additional social media meta tags -->
<meta property="article:author" content="Share Me">
<meta property="article:publisher" content="https://www.shareme.bio">
<meta property="article:section" content="Blog">
<meta property="article:tag" content="stories, sharing, blog, content">

<!-- Structured Data (JSON-LD) for better social media compatibility -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "<%= typeof page !== 'undefined' && page.metaTitle ? page.metaTitle : (typeof page !== 'undefined' && page.title ? page.title + ' - Share Me' : 'Share Me') %>",
  "description": "<%= typeof page !== 'undefined' && page.description ? page.description : 'Share your stories with the world' %>",
  "url": "<%= typeof currentUrl !== 'undefined' ? currentUrl : 'https://www.shareme.bio' %>",
  <% if (typeof page !== 'undefined' && page.image) { %>
  "image": "<%= page.image %>",
  <% } %>
  "publisher": {
    "@type": "Organization",
    "name": "Share Me",
    "url": "https://www.shareme.bio"
  },
  "author": {
    "@type": "Organization",
    "name": "Share Me"
  }
}
</script>

